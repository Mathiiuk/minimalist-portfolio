---
import Sections from "../Sections.astro";

import { work } from "@cv";
---

<Sections title="Experiencia">
  <ul>
    {
    work.map(({ name, startDate, endDate, position, summary }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
        const years = `${startYear} - ${endYear}`
        return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{name}</h3>
                                <h4>{position}</h4>
                            </div>
                            <time>{years}</time>
                        </header>

                        <footer>
                            <p>{summary}</p>
                        </footer>
                    </article>
                </li>
                )
            }
        )
    }
  </ul>
</Sections>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }
    article h4{
        font-weight: 400;
        color: #222;
    }
    header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 4px;
    }
    time{
        font-size: 0.85rem;
        color: #555;
    }


</style>